<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipe_detail_background_selected"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/widget_prev_button"
            android:layout_width="@dimen/arrow_button_width"
            android:layout_height="@dimen/arrow_button_width"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginTop="@dimen/default_padding"
            android:contentDescription="@string/previous_button"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chevron_left_24dp" />

        <TextView
            android:id="@+id/widget_recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/big_padding"
            android:paddingTop="@dimen/widget_title_padding_top"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/widget_title_text_size"
            android:textStyle="bold|italic"
            tools:text="Cheesecake" />

        <ImageView
            android:id="@+id/widget_next_button"
            android:layout_width="@dimen/arrow_button_width"
            android:layout_height="@dimen/arrow_button_width"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:contentDescription="@string/next_button"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chevron_right_24dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/widget_ingredient_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/default_padding"
        android:padding="@dimen/big_padding"
        tools:text=" • Ingredient (1)\n • Ingredient (2)\n • Ingredient (3)" />
</LinearLayout>