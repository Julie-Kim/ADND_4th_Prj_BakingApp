<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_recipe_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/recipe_detail_background"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:padding="@dimen/title_text_padding"
            android:textColor="@color/recipe_detail_text_color"
            android:textSize="@dimen/recipe_detail_text_size"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop"
            tools:text="Recipe Detail" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>